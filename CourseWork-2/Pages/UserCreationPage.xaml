<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseWork_2.Pages.UserCreationPage"
             Title="Создать пользователя">

    <ScrollView>
        <VerticalStackLayout Padding="30,10" Spacing="25">
            <Button Text="Заполнить паспортные данные" Clicked="OnPassportButtonClicked" HorizontalOptions="Fill" />
            <Button Text="Заполнить персональные данные" Clicked="OnUserDefaultCredentialsButtonClicked" HorizontalOptions="Fill" />
            <Button Text="Enter Employment History Records" Clicked="OnEmploymentHistoryRecordsButtonClicked" HorizontalOptions="Fill" />
            <Button Text="Enter Education" Clicked="OnEducationButtonClicked" HorizontalOptions="Fill" />
            <Button Text="Заполнить документ об образовании" Clicked="OnEducationDocumentButtonClicked" HorizontalOptions="Fill" />
            <Button Text="Создать" Clicked="OnCreateUserClicked" HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>