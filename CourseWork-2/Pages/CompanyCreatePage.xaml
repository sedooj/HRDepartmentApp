<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseWork_2.Pages.CompanyCreatePage"
             Title="Создать компанию">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Название компании" />
        <Entry x:Name="NameEntry" Placeholder="Введите название компании" />
        
        <Label Text="Адрес компании" />
        <Entry x:Name="AddressEntry" Placeholder="Введите адрес компании" />
        
        <Label Text="Телефон компании" />
        <Entry x:Name="PhoneEntry" Placeholder="Введите телефон компании" />
        
        <Button Text="Создать компанию" Clicked="OnCreateCompanyClicked" />
    </VerticalStackLayout>

</ContentPage>