<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseWork_2.Pages.userCreation.PassportPage"
             Title="Паспортные данные">

    <VerticalStackLayout Padding="30,10" Spacing="25">
        <Entry x:Name="SerialEntry" Placeholder="Серия" HorizontalOptions="Fill" />
        <Entry x:Name="DateOfIssueEntry" Placeholder="Дата выдачи" HorizontalOptions="Fill" />
        <Entry x:Name="WhoIssuedEntry" Placeholder="Кем выдан" HorizontalOptions="Fill" />
        <Button Text="Сохранить" Clicked="OnSaveClicked" HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>