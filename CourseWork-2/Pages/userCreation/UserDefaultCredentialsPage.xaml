<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseWork_2.Pages.userCreation.UserDefaultCredentialsPage"
             Title="Персональные данные">

    <VerticalStackLayout Padding="30,10" Spacing="25">
        <Entry x:Name="LastNameEntry" Placeholder="Фамилия" HorizontalOptions="Fill" />
        <Entry x:Name="FirstNameEntry" Placeholder="Имя" HorizontalOptions="Fill" />
        <Entry x:Name="SecondNameEntry" Placeholder="Отчество" HorizontalOptions="Fill" />
        <Entry x:Name="AgeEntry" Placeholder="Возраст" Keyboard="Numeric" HorizontalOptions="Fill" />
        <Entry x:Name="HomeAddressEntry" Placeholder="Домашний адресс" HorizontalOptions="Fill" />
        <Entry x:Name="PhoneNumberEntry" Placeholder="Номер телефона" HorizontalOptions="Fill" />
        <!-- <Entry x:Name="UserPhotoUrlEntry" Placeholder="" HorizontalOptions="Fill" /> -->
        <Button Text="Сохранить" Clicked="OnSaveClicked" HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>